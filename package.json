
{
  "name": "nerrad/update-php",
  "description": "A WordPress plugin adding Gutenberg blocks for use on the WordPress.org \"Update PHP\" page.",
  "version": "0.1.0",
  "main": "webpack.dev.js",
  "author": "Darren Ethier <darren@roughsmootheng.in> (https://darrenethier.com)",
  "license": "GPL-2.0",
  "repository": "git+https://github.com/nerrad/update-php.git",
  "browserslist":[
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "prebuild": "check-node-version --package",
    "prewatch": "check-node-version --package",
    "watch": "webpack --watch --config webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.js && pot-to-php",
    "watch-poll": "webpack --watch --watch-poll --config webpack.dev.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "ci": "concurrently \"npm run lint && npm run build\" \"npm run test-unit:coverage-ci\"",
    "test": "npm run lint && npm run test-unit",
    "test-php": "phpunit",
    "pot-to-php": "npx pot-to-php languages/wp-update-php-js.pot languages/wp-update-php-js-pot.php update-php",
    "lint-php": "composer run-script lint",
    "lint-php:skip-warnings": "composer run-script lint:skip-warnings",
    "lint-php:fix": "composer run-script lint-fix",
    "test-unit": "wp-scripts test-unit-js --config tests/javascript-config/unit/jest.config.json",
    "test-unit:coverage": "npm run test-unit -- --coverage",
    "test-unit:coverage-ci": "npm run test-unit -- --coverage --maxWorkers 1",
    "test-unit:watch": "npm run test-unit -- --watch"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.52",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.54",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.54",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.54",
    "@babel/polyfill": "^7.0.0-beta.54",
    "@babel/preset-react": "^7.0.0-beta.54",
    "autoprefixer": "^8.6.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "8.0.0-beta.4",
    "babel-plugin-dev-expression": "^0.2.1",
    "check-node-version": "^3.2.0",
    "clean-webpack-plugin": "^0.1.18",
    "concurrently": "^3.6.0",
    "core-js": "2.5.7",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "deep-freeze": "0.0.1",
    "eslint": "^4.19.1",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git#1774343f6226052a46b081e01db3fca8793cc9f1",
    "license-checker": "^20.1.0",
    "mini-css-extract-plugin": "^0.4.1",
    "postcss-loader": "^2.1.6",
    "react-test-renderer": "^16.4.1",
    "recast": "^0.14.7",
    "webpack": "^4.16.1",
    "webpack-assets-manifest": "^3.0.1",
    "webpack-cli": "^2.1.5",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.6.2"
  }
}
